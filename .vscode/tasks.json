{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++-11 build active file",
      "command": "/usr/bin/g++-11",
      "args": [
        "-g",
        "-std=c++20",
        "${workspaceFolder}/*.cpp",
        "-o",
        "${fileDirname}/rooster.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "compiler: /usr/bin/g++-11"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: clang++-12 build active file",
      "command": "/usr/bin/clang++-12",
      "args": [
        "-g",
        "-std=c++20",
        "${workspaceFolder}/*.cpp",
        "-o",
        "${fileDirname}/rooster.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "compiler: /usr/bin/clang++-12"
    }
  ]
}
